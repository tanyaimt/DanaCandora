<div class="container ">
    <div class="row">
        <div class="col mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/addPatient" method="POST">
                        <div class="row g-2 p=2">
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="fullName">
                                    <label for="fullName">Nombre Paciente</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="terapist">
                                    <label for="terapist">Terapeuta</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 p=2">
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="horseName">
                                    <label for="horseName">Nombre Cabello</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="dogName">
                                    <label for="dogName">Nombre Perro</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 p=2">
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="date" class="form-control" id="sessionDate">
                                    <label for="sessionDate">Fecha Session</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="activityName">
                                    <label for="activityName">Nombre de la Actividad</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 p=2">
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="objective">
                                    <label for="objective">Objetivo</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <input type="text" class="form-control" id="evaluation">
                                    <label for="evaluation">Evaluacion</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-2 p=2">
                            <div class="col-md">
                                <div class="p-2 form-floating">
                                    <textarea name="comment" class="form-control" id="evaluation" form="usrform">Enter text here...</textarea>
                                    <label for="objective">Objetivo</label>
                                </div>
                            </div>
                         </div>

                        <div class="form-group d-grid ">
                            <button class="btn btn-primary">Crear Paciente</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br>