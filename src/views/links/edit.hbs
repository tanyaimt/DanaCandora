<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" value="{{link.title}}">
                        </div>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL" value="{{link.url}}">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="description" rows="2" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group d-grid gap-2">
                            <button class="btn btn-success" >Update</button>
                       </div> 
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>