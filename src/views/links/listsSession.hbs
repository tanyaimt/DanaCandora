<div class="container p-4">
    <div class="row">
        <h1>Sesiones</h1>
        
        
        {{#each links}}

            <div class="col-md-3">
                <div class="card text-center">
                    <div class="car-">
                        <a href="" target="_blank">
                            <h3 class="card-title test-uppercase">
                            </h3>
                        </a>
                        <p class="m-2"></p>
                        <p>{{fullName}}</p>
                        <p>{{sessionDate}}</p>
                        <a href="/links/deleteSession/{{idSession}}" class="btn btn-danger">Eliminar</a>
                        <a href="/links/editSession/{{idSession}}" class="btn btn-secondary">Modificar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>There are no sessions created yet</p>
                    <a href="/links/addSession/{{idPatient}}">Create One!</a>
                </div>
            </div>

        {{/each}}
    </div>
</div>